{
  "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",        // Changed from ES2020 to NodeNext
      "moduleResolution": "NodeNext",
      "allowJs": true,
      "checkJs": true,
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "noImplicitAny": true,
      "strictNullChecks": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}